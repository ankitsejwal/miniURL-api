<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <form action="/shorturls" method="post" class="my-4 form-inline">
        <label class="sr-only">Enter URL</label>
        <input
          type="url"
          required
          placeholder="Enter URL"
          name="fullUrl"
          id="fullUrl"
          class="form-control mr-2 col"
        />
        <button type="submit" class="btn btn-success">Shorten</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% for (const url of shortUrls) { %>
          <tr>
            <td><a href="<%= url.full%>"><%= url.full %></a></td>
            <td><a href="<%= url.short %>"><%= url.short %></a></td>
            <td><%= url.click %></td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>

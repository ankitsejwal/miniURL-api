<div>
  <h1>URL Shortener</h1>
  <form action="/" method="post" class="my-4 form-inline">
    <label class="sr-only">Enter URL</label>
    <input
      type="url"
      required
      placeholder="Enter URL"
      name="fullUrl"
      id="fullUrl"
      class="form-control mr-2 col"
    />
    <button type="submit" class="btn btn-success">Shorten</button>
  </form>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% for (const url of urls) { %>
      <tr>
        <td><a href="<%= url.full%>"><%= url.full %></a></td>
        <td>
          <a href="<%= url.short %>" target="_blank">
            <span class="domain"></span><%= url.short %></a
          >
        </td>
        <td><%= url.clicks %></td>
      </tr>

      <% } %>
    </tbody>
  </table>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <form action="/" method="post">
      <div class="input-group col">
        <label class="sr-only">Enter URL</label>
        <input
          class="form-control form-control-lg"
          type="url"
          placeholder="Enter URL to shorten it"
          name="fullUrl"
          id="fullUrl"
          required
        />
        <div class="input-group-append">
          <button type="submit" class="btn btn-lg btn-primary">shorten</button>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-6">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% for (const url of urls) { %>
        <tr>
          <td><a href="<%= url.full%>"><%= url.full %></a></td>
          <td>
            <a href="<%= url.short %>" target="_blank">
              <span class="domain"></span><%= url.short %></a
            >
          </td>
          <td><%= url.clicks %></td>
        </tr>

        <% } %>
      </tbody>
    </table>
  </div>
</div>
